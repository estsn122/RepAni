.card.card-default
  .card-header.with-border.pb-3
    h4.card-title = "アニメ詳細画面 - #{@anime.title}"
    .card-tools
     = link_to "戻る", admin_animes_path, class: 'btn btn-outline-secondary mr-3'
  .card-body
    #anime-detail
      .d-flex.justify-content-between.mb-3
        h4.my-auto アニメ情報
        = link_to "編集", edit_admin_anime_path(@anime), class: 'btn btn-outline-primary'
      table.table.table-striped
        tr#anime_id
          th width='40%' id
          td width='60%' = @anime.id
        tr#anime_title
          th タイトル
          td = @anime.title
        tr#anime_public_url
          th 公式URL
          td = @anime.public_url
        tr#anime_default_air_time
          th デフォルトの放送時間（分）
          td = @anime.default_air_time
        tr#anime_first_broadcast_datetime
          th 初放送日時
          td
            - if @anime.first_broadcast_datetime
              = l @anime.first_broadcast_datetime, format: :default
        tr#anime_twitter_account
          th Twitterアカウント
          td = @anime.twitter_account
        tr#anime_twitter_hash_tag
          th Twitterハッシュタグ
          td = @anime.twitter_hash_tag
        tr#anime_public
          th 公開非公開
          td = @anime.public
        tr#anime_created_at
          th 登録日時
          td = l @anime.created_at, format: :long
        tr#anime_updated_at
          th 更新日時
          td = l @anime.updated_at, format: :long
    #term-detail
      = render 'admin/animes/terms/terms_table', anime: @anime
    #episode-detail
      = render 'admin/animes/episodes/episodes_table', anime: @anime
